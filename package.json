{
  "name": "ceptr-js",
  "version": "0.1.0",
  "description": "Semantic trees and Semtrex pattern matching in TypeScript",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
